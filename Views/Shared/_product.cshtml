@model Product
<div class="card mb-2">
    <img src="~/img/@Model.ImageUrl" alt="" class="card-img-top">
    <div class="card-body">
        <h5 class="card-titler">
            @Model.Name
        </h5>
        <small class="text-muted"><i class="fas fa-lira-sign"></i>@Model.Price</small>
        <p class="card-text">@Html.Raw(Model.Description)</p>

        <div class="card-footer text-center">
            <a asp-controller="Shop" asp-action="Details" asp-route-url="@Model.Url"
                class="btn btn-primary btn-sm">Details</a>



            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="AddToCart" style="display: inline;"  method="POST">
                    <input type="hidden" name="productId" value="@Model.ProductId">
                    <input type="hidden" name="quantity" value="1">
                    <button  class="btn btn-primary btn-sm" type="submit">Add To Cart</button>
                </form>
              
            }

        </div>


    </div>
</div>